{% extends "versiones/index.html.jinja" %}
{% block header %}{{ super() }}{% endblock %}
{% block content %}
    {% include 'form_errors.html.jinja' %}
    {% include 'messages.html.jinja' %}
    <form action="{{ url_for('versiones.upload') }}" method="post" enctype=multipart/form-data>
        {{ form.hidden_tag() }}
        {% for field in form %}
            {% if field.type in ['StringField', 'FileField', 'SelectField'] %}
            {% if field.errors %}
                <div class="form-group has-error">
            {% else %}
                <div class="form-group">
            {% endif %}
                    {{ field.label(class="control-label") }}
                    {{ field(class="form-control") }}
                </div>
            {% endif %}
        {% endfor %}
        <button type="submit" name="submit" class="btn btn-default">
            Subir
        </button>
        <a href="{{ url_for('versiones.index') }}">Cancelar</a>
    </form>
{% endblock %}
