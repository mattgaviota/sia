{% extends "restaurar/index.html.jinja" %}
{% block menu %}
    {% for database in databases %}
    <a  {% if active == database %} class="list-group-item active"{% else %}
        class="list-group-item" {% endif %}
        href="{{ url_for('restaurar.check', hospital=database) }}">
        {{ database }}
    </a>
    {% endfor %}
{% endblock %}
{% block content %}
<form action="{{ url_for('restaurar.validate') }}" method="post">
    {{ form.csrf_token }}
    <div class="form-group">
        {{ form.ip.label}}
        {{ form.ip }}
    </div>
    <div class="form-group">
        {{ form.port.label }}
        {{ form.port }}
    </div>
    <div class="form-group">
        {{ form.dbname.label }}
        {{ form.dbname }}
    </div>
    <div class="form-group">
        {{ form.ip_dest.label }}
        {{ form.ip_dest }}
    </div>
    <div class="form-group">
        {{ form.port_dest.label }}
        {{ form.port_dest }}
    </div>
    <div class="form-group">
        {{ form.db_dest.label }}
        {{ form.db_dest }}
    </div>
    <div class="form-group">
        {{ form.db_clean.label }}
        {{ form.db_clean }}
  </div>
    <input type="hidden" name="hospital" value="{{ active }}">
    <button type="submit" name="submit" class="btn btn-default">
        Validar
    </button>
    <a href="{{ url_for('restaurar.index') }}">Cancelar</a>
</form>
{% endblock %}
