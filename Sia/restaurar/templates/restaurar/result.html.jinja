{% extends "restaurar/check.html.jinja" %}
{% block menu %}
    {{ super() }}
{% endblock menu %}
{% block content %}
    {{ super() }}
{% endblock content %}
{% block result %}
<div {% if pasos|length == 1 %} class="panel panel-danger"{% else %}
    class="panel panel-success" {% endif %}>
    <div class="panel-heading">Resumen</div>
    <div class="panel-body">
        <ol>
            {% for paso in pasos %}
            <li>{{ paso }}</li>
            {% endfor %}
        </ol>
    </div>
</div>
<form action="{{ url_for('restaurar.restore') }}" method="post">
    {{ form.hidden_tag() }}
    {% for field in form %}
        {% if field.type in ["StringField", "BooleanField"] %}
            <div class="form-group">
                {{ field(class="form-control", type="hidden") }}
            </div>
        {% endif %}
    {% endfor %}
    {% if pasos|length != 1 %}
        <button type="submit" name="submit" class="btn btn-default">
            Restaurar
        </button>
    {% endif %}
    <a href="{{ url_for('restaurar.check', id_servidor=active) }}">Cancelar</a>
</form>
{% endblock result %}
