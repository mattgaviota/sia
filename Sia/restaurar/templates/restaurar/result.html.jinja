{% extends "restaurar/check.html.jinja" %}
{% block menu %}
    {{ super() }}
{% endblock menu %}
{% block content %}
    {{ super() }}
{% endblock content %}
{% block result %}
<div {% if pasos|length == 1 %} class="panel panel-danger"{% else %}
    class="panel panel-success" {% endif %}>
    <div class="panel-heading">Resumen</div>
    <div class="panel-body">
        <ol>
            {% for paso in pasos %}
            <li>{{ paso }}</li>
            {% endfor %}
        </ol>
    </div>
</div>
<form action="{{ url_for('restaurar.restore') }}" method="post">
    <input type="hidden" name="ip" id="ip" value="{{ request.ip }}">
    <input type="hidden" name="port" id="port" value="{{ request.port }}">
    <input type="hidden" name="dbname" id="dbname" value="{{ request.dbname }}">
    <input type="hidden" name="ip_dest" id="ip_dest" value="{{ request.ip_dest }}">
    <input type="hidden" name="port_dest" id="port_dest" value="{{ request.port_dest }}">
    <input type="hidden" name="db_dest" id="db_dest" value="{{ request.db_dest }}">
    <input type="hidden" name="clean_db" value="{{ request.clean_db }}">
    <input type="hidden" name="hospital" value="{{ active }}">
    <input type="hidden" name="pasos" value="{{ pasos|length }}">
    {% if pasos|length != 1 %}
        <button type="submit" name="submit" class="btn btn-default">
            Restaurar
        </button>
    {% endif %}
    <a href="{{ url_for('restaurar.check', hospital=active) }}">Cancelar</a>
</form>
{% endblock result %}
