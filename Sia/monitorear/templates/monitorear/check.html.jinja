{% extends "monitorear/index.html.jinja" %}
{% block menu %}
    <div class="row contenido">
        <div class="col-md-2">
            <a class="btn btn-primary" href="{{ url_for('home.index') }}">
                Volver
            </a>
        </div>
    </div>
    <div class="list-group">
        {% for servidor in servidores %}
        <a {% if active_servidor == servidor.id %} class="list-group-item active"{% else %}
            class="list-group-item" {% endif %} href="{{ url_for('monitorear.check', id_servidor=servidor.id) }}" class="list-group-item">
            <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
            {{ servidor.name }}
        </a>
        {% endfor %}
    </div>
{% endblock %}
{% block content %}
    {% for comando in comandos %}
    <a class="list-group-item"
        href="{{ url_for('monitorear.ejecutar', id_servidor=active_servidor, id_comando=comando.id) }}">
        {{ comando.title }}
    </a>
    {% endfor %}
{% endblock %}
