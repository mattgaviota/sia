{% extends "databases/list.html.jinja" %}
{% block menu %}{{ super() }}{% endblock %}
{% block content %}
    {% for database in databases %}
    <a  {% if active == database %} class="list-group-item active"{% else %}
        class="list-group-item" {% endif %}
        href="{{ url_for('admin.edit_json', hospital=database) }}">
        {{ database }}
    </a>
    {% endfor %}
{% endblock %}
{% block result %}
    <form action="{{ url_for('admin.update_json') }}" method="post">
        <div class="form-group">
            <label for="ip">Dirección del servidor de la base origen</label>
            <input class="form-control" type="text" name="ip" id="ip" value="{{ datos.ip }}">
        </div>
        <div class="form-group">
            <label for="port">Puerto del servidor de la base origen</label>
            <input class="form-control" type="text" name="port" id="port" value="{{ datos.port }}">
        </div>
        <div class="form-group">
            <label for="dbname">Nombre de la base origen</label>
            <input class="form-control" type="text" name="dbname" id="dbname" value="{{ datos.dbname }}">
        </div>
        <div class="form-group">
            <label for="ip_dest">Dirección del servidor destino</label>
            <input class="form-control" type="text" name="ip_dest" id="ip_dest" value="{{ datos.ip_dest }}">
        </div>
        <div class="form-group">
            <label for="port_dest">Puerto del servidor de la base origen</label>
            <input class="form-control" type="text" name="port_dest" id="port_dest" value="{{ datos.port_dest }}">
        </div>
        <div class="form-group">
            <label for="db_dest">Nombre de la base destino</label>
            <input class="form-control" type="text" name="db_dest" id="db_dest" value="{{ datos.db_dest }}">
        </div>
        <input type="hidden" name="hospital" value="{{ active }}">
        <button type="submit" name="submit" class="btn btn-default">
            Actualizar
        </button>
        <a href="{{ url_for('admin.list_json') }}">Cancelar</a>
        <div class="col-md-offset-9">
            <a class="btn btn-danger" href="{{ url_for('admin.delete', hospital=active) }}">
                <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
                Eliminar
            </a>
        </div>
    </form>
{% endblock %}
