{% extends "main.html.jinja" %}
{% block header %}{{ super() }}{% endblock %}
{% block menu %}{{ super() }}{% endblock %}
{% block content %}
    {% include 'form_errors.html.jinja' %}
    {% include 'messages.html.jinja' %}
    <div class="list-group">
        {% for database in databases %}
        <a href="{{ url_for('admin.edit', id_servidor=database.id) }}" class="list-group-item">
            <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
            {{ database.name }}
        </a>
        {% endfor %}
    </div>
{% endblock %}
{% block result %}
    <a href="{{ url_for('admin.create') }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        Nuevo
    </a>
{% endblock %}
