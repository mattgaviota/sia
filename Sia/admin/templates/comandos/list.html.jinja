{% extends "main.html.jinja" %}
{% block header %}{{ super() }} <h2>Comandos</h2>{% endblock %}
{% block menu %}{{ super() }}{% endblock %}
{% block content %}
    {% include 'form_errors.html.jinja' %}
    {% include 'messages.html.jinja' %}
    <div class="list-group">
        {% for comando in comandos %}
        <a href="{{ url_for('admin.comandos_edit', id_comando=comando.id) }}" class="list-group-item">
            <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
            {{ comando.title }}
        </a>
        {% endfor %}
    </div>
{% endblock %}
{% block result %}
<a href="{{ url_for('admin.comandos_create') }}" class="btn btn-success">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    Nuevo
</a>
{% endblock %}
