{% extends "access/list.html.jinja" %}
{% block menu %}{{ super() }}{% endblock %}
{% block content %}
    {% include 'form_errors.html.jinja' %}
    {% include 'messages.html.jinja' %}
    {% for acceso in accesos %}
    <a  {% if active == acceso.id %} class="list-group-item active"{% else %}
        class="list-group-item" {% endif %}
        href="{{ url_for('admin.edit_access', id_acceso=acceso.id) }}">
        {{ acceso.name }}
    </a>
    {% endfor %}
{% endblock %}
{% block result %}
    <form action="{{ url_for('admin.update_access') }}" method="post">
        {{ form.hidden_tag() }}
        {% for field in form %}
            {% if field.type == "StringField" %}
                <div class="form-group">
                    {{ field.label}}
                    {{ field(size=50) }}
                </div>
            {% endif %}
        {% endfor %}
        <button type="submit" name="submit" class="btn btn-default">
            Actualizar
        </button>
        <a href="{{ url_for('admin.list_access') }}">Cancelar</a>
        <div class="col-md-offset-9">
            <a class="btn btn-danger" href="{{ url_for('admin.delete_access', id_acceso=active) }}">
                <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
                Eliminar
            </a>
        </div>
    </form>
{% endblock %}
