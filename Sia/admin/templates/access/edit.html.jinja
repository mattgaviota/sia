{% extends "main.html.jinja" %}
{% block header %}{{ super() }}{% endblock %}
{% block menu %}{{ super() }}{% endblock %}
{% block content %}
    <form action="{{ url_for('admin.update_access') }}" method="post">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
            <div class="alert alert-success .alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <ul>
                    {% for message in messages %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        {% endwith %}
        <div class="form-group">
            <label for="userdb">Usuario</label>
            <input class="form-control" type="text" name="userdb" id="userdb" value="{{ user }}">
        </div>
        <div class="form-group">
            <label for="passw">Direcci√≥n del servidor de la base origen</label>
            <input class="form-control" type="text" name="passw" id="passw" value="{{ passw }}">
        </div>
        <button type="submit" name="submit" class="btn btn-default">
            Guardar
        </button>
        <a href="{{ url_for('admin.index') }}">Cancelar</a>
    </form>
{% endblock %}
